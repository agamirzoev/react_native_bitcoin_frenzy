{
  "env": {
      "browser": true,
      "commonjs": true,
      "es2021": true,
      "node": true,
  },
  "extends": [
      "airbnb"
  ],
  "settings": {
      "import/resolver": {
        "node": {
          "paths": ["src"],
          "extensions": [".js", ".jsx", ".ts", ".tsx"]
        }
      }
  },
  "parserOptions": {
      "ecmaVersion": 13
  },
  "rules": {
      "import/extensions": [0, "never"],
      "no-restricted-exports": [0, "never"],
      "no-underscore-dangle": [0, "never"],
      "react/jsx-props-no-spreading": [0, "never"],
      "arrow-body-style": [0, "never"],
      "react/function-component-definition": [
          2,
          {
              "namedComponents": "arrow-function",
              "unnamedComponents": "arrow-function"
          }
      ],
      "react/style-prop-object": [0, "never"],
      "react-native/no-unused-styles": [0, "never"],
      "react-native/split-platform-components": [0, "never"],
      "react-native/no-inline-styles": [0, "never"],
      "react-native/no-color-literals": [0, "never"],
      "react-native/no-raw-text": [0, "never"],
  }
}